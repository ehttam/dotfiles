{
    "workbench.colorTheme": "SynthWave '84",
    "editor.fontFamily": "'Operator Mono SSM Light', Consolas, 'Courier New', monospace",
    "vscode_custom_css.imports": [
        "file:///D:/contens/_mra/vscode/synthwave84.css"
    ],
    "files.associations": {
        ".cflintrc": "json"
    },
    "cflint.jarPath": "d:\\contens\\cflint\\CFLint-1.4.1-all.jar",
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    
    // vim
    "editor.lineNumbers": "relative",
    "vim.leader": "<,>",
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.statusBarColorControl": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#5f00af",
        "statusBar.noFolderBackground": "#5f00af",
        "statusBar.debuggingBackground": "#5f00af"
    },
    
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
        "before": ["j", "j"],
        "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
        "before": ["<C-n>"],
        "commands": [":nohl"]
        }
    ],

    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": true
    },
    "git.confirmSync": false,

    "terminal.integrated.shell.windows": "cmd.exe",

    "terminal.integrated.env.windows": {
        "CMDER_ROOT": "D:\\contens\\_mra\\_tools\\cmder"
    },
    "terminal.integrated.shellArgs.windows": [
        "/k",
        "%CMDER_ROOT%\\vendor\\bin\\vscode_init.cmd"
    ]
      
}
