#!/bin/bash

echo $USER `date` >> /home/matthe/tmp/key.log

bd=/sys/class/backlight/amdgpu_bl0/brightness

bdv=$(cat $bd)

case $1 in
	up)
		echo "up" >> /home/matthe/tmp/key.log
		echo $(( bdv + 20 )) > $bd
		cat $bd
	;;
	down)
		echo "down" >> /home/matthe/tmp/key.log
		echo $(( bdv - 20 )) > $bd
		cat $bd
	;;
	*)
	echo "$bdv"
	echo "$bdv" >> /home/matthe/tmp/key.log
esac
